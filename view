

import numpy as np

def class PYPoint
	def __init__():
		self.x = 0
		self.y = 0
		self.r = 1
	def getxyr():
		return self.x,self.y,self.r
	def assignxyr(x,y,r=1)
		self.x = x
		self.y = y
		self.r = r


